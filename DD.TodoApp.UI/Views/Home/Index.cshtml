@model List<WorkListDto>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>To & Do App</title>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container" my-2> 
        <div class="text-end my-2">
    <a asp-action="Create" asp-controller="Home" class="btn btn-primary btn-sm"> Yeni iş ekle </a>
        </div>
    </div>

    <div class="container my-2">
        <table class="table table-hovered table-bordered table-sm">
            <thead>
                <tr>
                <th>İş</th>
                <th>Durumu</th>
                <th>İşlem</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Definition</td>
                        <td>@(item.IsCompleted?"Tamamlandı":"Devam ediyor")</td>
                        <td><a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a></td>
                        <td><a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
